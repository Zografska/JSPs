@model JSPs.Models.Ticket

@{
    ViewBag.Title = "CreateDily";
}

<h2>НОВ БИЛЕТ</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DateOfReservation, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label(@DateTime.Today.ToString().Split(' ')[0])
                @Model.DateOfReservation=@DateTime.Today;
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Линија", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @{ string busLine = ViewBag.Bus.BusLine;}
                @Html.Label(busLine)
            </div>

        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.StartDestination, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.StartDestination, new SelectList(ViewBag.stops))
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.EndDestination, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.EndDestination, new SelectList(ViewBag.stops))
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

