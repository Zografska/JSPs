@model JSPs.Models.CreateTicketModel
@{
    ViewBag.Title = "CreateTicket";
}


<h2>НОВ БИЛЕТ </h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @id = "Date", @Value = "-Oдбери дата-" } })
            @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Автобус", htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            @Html.DropDownListFor(m => m.BusId, new SelectList(Model.Buses, "ID", "BusLine"))
        </div>

    </div>

    <div class="form-group">
        @Html.Label("Време", htmlAttributes: new { @class = "control-label col-md-2" })

        <div class="col-md-10">
            @Html.DropDownListFor(m => m.BusId, new SelectList(Model.Buses, "ID", "StartTime"))
        </div>

    </div>


    <div class="form-group">
        @Html.Label("Почетна Постојка", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.StartBusStopId, new SelectList(Model.StartBusStops, "ID", "Name"))
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Крајна Постојка", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownListFor(m => m.EndBusStopId, new SelectList(Model.EndBusStops, "ID", "Name"))
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script>
        $(document).ready(function () {
            $("#Date").datepicker({
                dateFormat: "mm/dd/yy",
                minDate: -0,
                maxDate: "+1M +0D"
            });
        });
    </script>
    <script>
        //on select na linija da se izlistaat nejzinite vreminja i postojki 
    </script>
}

