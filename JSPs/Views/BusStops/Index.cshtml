@model IEnumerable<JSPs.Models.BusStop>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" id="stopsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                </td>
                <td>
                    <button type="button" data_id="@item.ID" class="btn-block">Резервирај тикет</button>
                    <div class="modal fade" id="mModal_@item.ID" data-url="@Url.Action("PickEndDestination", "BusStops", new { id = item.ID })"></div>
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#stopsTable").DataTable();

            $(".btn-block").click(function () {
                //var proba = "\"#mModal_" + $(this).attr("data_id") + "\"";
                //console.log(proba);
                var url = $("#mModal_" + $(this).attr("data_id")).data("url");
                console.log(url);
                $.get(url, function (data) {
                    $("#mModal_1").html(data);
                    $("#mModal_1").modal("show");
                });
            });

        });
    </script>
}
